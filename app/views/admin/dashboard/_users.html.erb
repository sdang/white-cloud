<div class="page-header">
	<h3>Pending Authorization</h3>
	<% User.where("authorized = ?", false).each do |u|%>
		<%= link_to "authorize", :action => "authorize", :id => u.id, :controller => "admin/users"%>  | 
		<%= u.name %> (<%= u.email %>)<br/>
	<% end %>
</div>

<div class="page-header">
	<h3>Administrators</h3>
	<% User.where("authorized = ? and admin = ?", true, true).each do |u|%>
		<%= link_to "revoke admin", :action => "revoke_admin", :id => u.id, :controller => "admin/users" %> |
		<%= u.name %> (<%= u.email %>)<br/>
	<% end %>
</div>

<div class="page-header">
	<h3>Active Users</h3>
	<% User.where("authorized = ? and admin = ?", true, false).each do |u|%>
		<%= link_to "make admin", :action => "make_admin", :id => u.id, :controller => "admin/users" %> |
		<%= link_to "revoke", :action => "revoke", :id => u.id, :controller => "admin/users" %>
		<%= u.name %> (<%= u.email %>)<br/>
	<% end %>
</div>