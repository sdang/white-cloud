<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <% if devise_error_messages! != "" %>
	<div id="alert"><%= devise_error_messages! %></div>
  <% end %>

	<%= f.label :email, "Email Address" %><br />
	<%= f.email_field :email, :title => "name@domain.com", :class => "auto-hint" %>

  	<%= f.label :password %><br />
	<%= f.password_field :password, :title => "**********", :class => "auto-hint" %>

	<%= f.label :password_confirmation %><br />
  	<%= f.password_field :password_confirmation, :title => "**********", :class => "auto-hint" %>

  <div><%= f.submit "Sign up", :disable_with => "Please Wait ..." %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
