<!DOCTYPE html>
<html>
<head>
  <title>WhiteCloud</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>

<%= render :partial => "/shared/navigation" %>

<div class="container">
	<div class="row">
		<div class="span8">
				<% if flash[:notice]%>
					<div class="alert alert-success">
					<a class="close" data-dismiss="alert" href="#">&times;</a>
					<%= flash[:notice] %>
					</div>
				<% end %>
				<% if flash[:alert] %>
					<div class="alert alert-error">
					<a class="close" data-dismiss="alert" href="#">&times;</a>
					<%= flash[:alert] %>
					</div>
				<% end %>
				<%=yield %>
		</div>
		<div class="span4">
				<%= yield :sidebar %>
		</div>
	</div>
	<div class="row">
			<div class="span12">
				<p>&copy; <%= Time.now.year %>, Olive View-UCLA, Department of Medicine<br/>
				WhiteCloud : build <%= ENV["APP_VERSION"] -%></p>
			</div>
	</div>
</div>
</body>
</html>
