<!DOCTYPE html>
<html>
<head>
  <title>WhiteCloud</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body data-spy="scroll" data-target=".subnav" data-offset="50">

<%= render :partial => "/shared/navigation" %>

<div class="container">
	<div class="row">
		<div class="span8">
				<div id="auto-logout" class="alert alert-info hidden"></div>
				<% if flash[:notice]%>
					<div class="alert alert-success">
					<a class="close" data-dismiss="alert" href="#">&times;</a>
					<%= flash[:notice] %>
					</div>
				<% end %>
				<% if flash[:alert] %>
					<div class="alert alert-error">
					<a class="close" data-dismiss="alert" href="#">&times;</a>
					<%= flash[:alert] %>
					</div>
				<% end %>
				<%=yield %>
		</div>
		<div id="sidebar" class="span4">
				<%= yield :sidebar %>
		</div>
	</div>
	<div class="row">
			<div class="span8 well">
				<div class="pull-left">&copy; <%= Time.now.year %>, Olive View-UCLA, Department of Medicine</div>
				<div class="pull-right">WhiteCloud <%= ENV["APP_VERSION"] -%></div>
			</div>
	</div>
</div>
</body>
</html>
