<div id="prescription-<%= prescription.id -%>" class="reminder">
	<div id="links">
		<%= link_to image_tag("delete_16.gif", :border => 0), {:action => "destroy", :id => prescription.id, :controller => "prescriptions"}, :method => :delete, :remote => true, :confirm => "Delete this Rx?" %>
		<%= link_to image_tag("edit_16.gif", :border => 0), {:action => "edit", :id => prescription.id, :controller => "prescriptions"}, :remote => true %>
	</div>
	<div id="content">
		<span id="drug"><%= prescription.drug %></span>
		<span id="qty">#<%= prescription.quantity %></span>
		<span id="sig"><%= prescription.sig %></span>
	</div>
	<div style="clear: both"></div>
</div>