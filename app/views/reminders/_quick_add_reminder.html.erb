<div class="page-header">
	<h3>Quick Add Reminder</h3>
	<div id="reminder-quick-form-error" class="hidden alert"></div>
	<div id="reminder-quick-form-notice" class="hidden notice"></div>
	<div id="add-by-language" class="large-form">
		<%= form_tag url_for(:controller => "/reminders", :action => "create_by_string"), :remote => true, :id => "quick-form-string", :class => "form-horizontal" do %>
			<table>
				<tr valign="center">
					<td><%= text_field_tag :string, "", :id => "quick-form-string", :placeholder => "eg Check Cultures in 2 days 1231234", :class => "span4" %></td>
					<td><%= button_tag raw("<i class='i icon-plus-sign'></i> Add Reminder"), :class => "btn"%></td>
				</tr>
			</table>
		<% end %>
	</div>
</div>