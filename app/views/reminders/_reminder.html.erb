<div id="reminder-<%= reminder.id -%>" class="reminder">
	<div style="float: left">
		<%= link_to image_tag("delete_16.gif", :border => 0), {:action => "destroy", :id => reminder.id, :controller => "reminders"}, :method => :delete, :remote => true, :confirm => "Delete this reminder?" %>
		<%= link_to image_tag("edit_16.gif", :border => 0), {:action => "edit", :id => reminder.id, :controller => "reminders"}, :remote => true %>
	</div>
	<div style="margin-left: 60px">
		<span style="color: #777">#<%= reminder.mrn %></span>: 
		<%= reminder.reminder %> 
		<span style="color: green; font-size: 10px">in <%= time_ago_in_words(reminder.remind_time) if reminder.remind_time %></span>
	</div>
	<div style="clear: both"></div>
</div>