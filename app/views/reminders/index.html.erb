<div id="page-navigation-tabs">
	<div class="idTabs">
		<%= link_to "All Upcoming Reminders", "#upcoming_reminders", :class => "button medium white" -%>
		<%= link_to "Completed Reminders", "#completed_reminders", :class => "button medium white" -%>
		<%= link_to "Add Reminder", "#add_reminder", :class => "button medium white" -%>
	</div>
</div>
<br/>

<div id="contentCard">
	<h1>Quick Add Reminder</h1>
	<div id="add-by-language" class="x-large-form">
		<%= form_tag "#" do %>
			<%= text_field_tag "quick-add-reminder", "", :title => "eg Check Cultures in 2 days 1231234", :style => "width: 375px" %>
			<%= submit_tag "Add Reminder", :class => "button green large"%>
		<% end %>
	</div>
</div>

<div id="upcoming_reminders"><%= render :partial => "upcoming_reminders" %></div>
<div id="completed_reminders"><%= render :partial => "completed_reminders" %></div>
<div id="add_reminder"><%= render :partial => "add_reminder" %></div>