<div id="reminder-form-error" class="hidden alert"></div>
<div id="reminder-form-notice" class="hidden notice"></div>
<% @reminder.reminder_list_id ||= current_user.default_reminder_list.id %>
<%= form_for @reminder, :remote => true, :id => @reminder.id do |f| %>

	<%= f.label :mrn %><br/>
	<%= f.text_field :mrn, :title => "0000000" %><br/>

	<%= f.label :Reminder %><br/>
	<%= f.text_field :reminder, :title => "e.g. Follow up blood Cx" %><br/>

	<%= f.label :When%><br/>
	<% if @reminder.new_record? %>
		<%= f.text_field :time_value, :style => "width: 50px" %> <%= select(:reminder, :time_units, [['Hours', 1], ['Days', 24], ['Weeks', 168]]) %><br/>
	<% else %>
		<%= f.datetime_select :remind_time, :ampm => false, :order => [:month, :day, :year], :include_seconds => false %><br/>
	<% end %>

	<%= f.label :List %><br/>
	<%= collection_select(:reminder, :reminder_list_id, ReminderList.all, :id, :name, :style => "width: 110px")%><br/>

	<% if @reminder.new_record? %>
		<%= f.submit "Create Reminder", :class => "button small white" %>
	<% else %>
		<%= f.submit "Edit Reminder", :class => "button small white" %>
		<%= link_to "cancel", {:controller => "/reminders", :action => "cancel_edit", :id => @reminder.id }, :method => :get, :remote => true %>
	<% end %>
	
<% end %>