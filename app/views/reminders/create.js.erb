<% if @reminder.new_record? %>
	$("#reminder-form-error").html("<%= escape_javascript(@reminder.errors.full_messages.join(', '))%>")
	$("#reminder-form-error").effect("highlight", {}, 3000)
<% else %>
	$("#reminder-form-notice").html("Reminder Created")
	$("#reminder-form-notice").effect("highlight", {}, 3000)
	$("#reminder-form-error").css("display", "none");
	$("#reminder-table").html("<%= escape_javascript(render :partial => '/reminders/table', :object => current_user.reminder_list) %>");
	$("#reminder-<%= @reminder.id %>").effect("highlight", {}, 3000);
	$("#new_reminder")[0].reset();
	$(".reminder").find('div:first').fadeTo(0,0.5);
<% end %>